<div class="container">
  <div class="row">
    <table class="table table-striped tablesorter-bootstrap">
      <thead>
        <tr role="row" class="tablesorter-headerRow">
          <th class="id" scope="col">ID</th>
          <th class="email" scope="col">email</th>
          <th class="admin" scope="col">管理員</th>
          <th class="tasks" scope="col">任務</th>
          <th class="show" scope="col">查閱</th>
          <th class="edit" scope="col">編輯</th>
          <th class="delete" scope="col">刪除</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr role="row">
            <th><%= user.id %></th>
            <th><%= user.email %></th>
            <th><%= user.admin %></th>
            <th><%= user.tasks.count %></th>
            <th><%= link_to "查閱", admin_user_path(user) %></th>
            <th><button><%= link_to "編輯", edit_admin_user_path(user) %></button></th>
            <th><%= button_to "刪除", admin_user_path(user), method: :delete, data: { confirm: '確定刪除？' } %></th>
          </tr>
        <% end %>
      </tbody>
      
      <caption>
        <%= link_to "新增使用者", admin_sign_up_path %></th>
      </caption>
    </table>
  </div>
</div>