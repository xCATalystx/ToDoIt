<h1>編輯使用者</h1>
<% if @user.errors.any? %>
  <ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for([:admin, @user]) do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>
  <div>
  <%= f.label :admin %>
  <%= f.check_box :admin, {}, "1", "0" %>
  </div>

  <%= f.submit %>
<% end %>