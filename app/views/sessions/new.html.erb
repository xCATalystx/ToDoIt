<div class="container">
  <div class="row">
    <h2>Sign In</h2>

    <%= form_with url: sign_in_path do |form| %>
      <div class="field">
        <%= form.label :email %>
        <br>
        <%= form.text_field :email, placeholder: "example@mail.com" %>
      </div>
      <div class="field">
        <%= form.label :password %>
        <br>
        <%= form.password_field :password, placeholder: "password" %>
        <br>
        <%= link_to "Forget Password?", password_reset_path %>
      </div>
    
      <div class="action">
        <%= form.submit "Sign In" %>
      </div>
    <% end %>
  </div>
</div>



